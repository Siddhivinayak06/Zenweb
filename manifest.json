{
  "manifest_version": 3,
  "name": "ZenWeb Browser Assistant",
  "version": "2.0",
  "description": "Reduces cognitive load with adaptive profiles, page analysis, and focus tools. Simplify pages, track cognitive scores, and boost productivity.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "sidePanel",
    "contextMenus"
  ],
  "host_permissions": [
    "<all_urls>",
    "http://localhost/*",
    "http://127.0.0.1/*"
  ],
  "action": {
    "default_title": "Open ZenWeb Side Panel",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'; connect-src 'self' https://vlguestftwnsvtdhfcbb.supabase.co https://generativelanguage.googleapis.com https://fonts.googleapis.com https://api.stripe.com https://m.stripe.network; frame-src https://js.stripe.com https://hooks.stripe.com"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "lib/Readability.js",
        "modules/auth.js",
        "modules/profiles.js",
        "modules/cognitive-scorer.js",
        "modules/analytics.js",
        "modules/adblocker.js",
        "modules/theme.js",
        "modules/speech.js",
        "modules/ai.js",
        "modules/bionic.js",
        "modules/form-wizard.js",
        "modules/reader.js",
        "modules/focus.js",
        "content.js"
      ],
      "css": [
        "styles.css",
        "soft_simplify.css"
      ]
    }
  ],
  "commands": {
    "toggle-simplify": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "Command+Shift+S"
      },
      "description": "Toggle Simplify Mode"
    },
    "toggle-focus": {
      "suggested_key": {
        "default": "Ctrl+Shift+F",
        "mac": "Command+Shift+F"
      },
      "description": "Toggle Focus Mode"
    },
    "_execute_side_panel": {
      "suggested_key": {
        "default": "Ctrl+Shift+E",
        "mac": "Command+Shift+E"
      },
      "description": "Open ZenWeb Side Panel"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}